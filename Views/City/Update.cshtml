@model City
@{
    ViewData["Title"] = "Update - City";
}

<div class="border p-4">
    <div>
        <h2>
            Edit City
        </h2>
    </div>
    <div>
        <form method="post">
            <div class="mt-2">
                <input type="text" asp-for="CityId" hidden />
                <input type="text" asp-for="CreationDate" hidden />
            </div>
            <div class="mt-2">
                <label class="form-label" asp-for="CityName"></label>
                <input type="text" class="form-control" asp-for="CityName" />
                <span class="text-danger" asp-validation-for="CityName"></span>
            </div>
            <div class="mt-2">
                <label class="form-label" asp-for="PinCode"></label>
                <input type="text" class="form-control" asp-for="PinCode"/>
                <span class="text-danger" asp-validation-for="PinCode"></span>
            </div>
            <div class="mt-2">
                <label class="form-label" asp-for="Stdcode"></label>
                <input type="text" class="form-control" asp-for="Stdcode" />
                <span class="text-danger" asp-validation-for="Stdcode"></span>
            </div>
            <div class="mt-2">
                <label class="form-label" asp-for=StateId></label>
                <select class="form-select" asp-for="StateId" asp-items="@ViewBag.States">

                </select>
                <span class="text-danger" asp-validation-for="StateId"></span>
            </div>
             <div class="mt-3">
                <button class="btn btn-gradient" type="submit">Submit</button>
                <a class="btn btn-danger" type="button" asp-controller="City" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}
