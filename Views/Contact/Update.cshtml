@model Contact
@{
    ViewData["Title"] = "Update - Contact";
}

<div class="border p-4">
    <div>
        <h2>Add Contact</h2>
    </div>
    <div>
        <form method="post">
            <div>
                <input type="text" asp-for="ContactId" hidden/>
                <input type="text" asp-for="CreationDate" hidden/>
            </div>
            <div class="mt-2 row">
                <div class="col-md-12">
                    <label class="form-label" asp-for="ContactName"></label>
                    <input type="text" class="form-control" asp-for="ContactName" />
                    <span class="text-danger" asp-validation-for="ContactName"></span>
                </div>
            </div>
           
            <div class="mt-2 row">
                <div class="col-md-6">
                    <label class="form-label" asp-for="ContactCategoryId"></label>
                    <select class="form-select" asp-for="ContactCategoryId" asp-items="@ViewBag.ContactCategories">

                    </select>
                    <span class="text-danger" asp-validation-for="ContactCategoryId"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for="CountryId"></label>
                    <select class="form-select" asp-for="CountryId" asp-items="@ViewBag.Countries">

                    </select>
                    <span class="text-danger" asp-validation-for="CountryId"></span>
                </div>
            </div>
            <div class="mt-2 row">
                <div class="col-md-6">
                    <label class="form-label" asp-for="StateId"></label>
                    <select class="form-select" asp-for="StateId" asp-items="@ViewBag.States">

                    </select>
                    <span class="text-danger" asp-validation-for="StateId"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for="CityId"></label>
                    <select class="form-select" asp-for="CityId" asp-items="@ViewBag.Cities">

                    </select>
                    <span class="text-danger" asp-validation-for="CityId"></span>
                </div>
            </div>
            <div class="mt-2 row">
                <div class="col-md-6">
                    <label class="form-label" asp-for="ContactNo"></label>
                    <input type="text" class="form-control" asp-for="ContactNo" />
                    <span class="text-danger" asp-validation-for="ContactNo"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for="WhatsAppNo"></label>
                    <input type="text" class="form-control" asp-for="WhatsAppNo" />
                    <span class="text-danger" asp-validation-for="WhatsAppNo"></span>
                </div>
            </div>
            <div class="mt-2 row">
                <div class="col-md-6">
                    <label class="form-label" asp-for="BirthDate"></label>
                    <input type="date" class="form-control" asp-for="BirthDate" />
                    <span class="text-danger" asp-validation-for="BirthDate"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for="Email"></label>
                    <input type="email" class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="mt-2 row">
                <div class="col-md-6">
                    <label class="form-label" asp-for="Age"></label>
                    <input type="text" class="form-control" asp-for="Age" />
                    <span class="text-danger" asp-validation-for="Age"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for="BloodGroup"></label>
                    <input type="text" class="form-control" asp-for="BloodGroup" />
                    <span class="text-danger" asp-validation-for="BloodGroup"></span>
                </div>
            </div>
            <div class="mt-2 row">
                <div class="col-md-6">
                    <label class="form-label" asp-for="FacebookId"></label>
                    <input type="text" class="form-control" asp-for="FacebookId" />
                    <span class="text-danger" asp-validation-for="FacebookId"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for="LinkedInId"></label>
                    <input type="text" class="form-control" asp-for="LinkedInId" />
                    <span class="text-danger" asp-validation-for="LinkedInId"></span>
                </div>
            </div>
            <div class="mt-2 row">
                <div class="col-md-12">
                    <label class="form-label" asp-for="Address"></label>
                    <textarea class="form-control" asp-for="Address">

                    </textarea>
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
            </div>
             <div class="mt-3">
                <button class="btn btn-gradient" type="submit">Submit</button>
                <a class="btn btn-danger" type="button" asp-controller="Contact" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

