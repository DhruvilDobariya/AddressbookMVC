@model ContactCategory
@{
    ViewData["Title"] = "Create - Contact Category";
}

<div class="border p-4">
    <div>
        <h2>
            Add Contact Category
        </h2>
    </div>
    <div>
        <form method="post" asp-action="Create">
            <div class="mt-2">
                <label class="form-label" asp-for="ContactCategoryName"></label>
                <input type="text" class="form-control" asp-for="ContactCategoryName"/>
                <span class="text-danger" asp-validation-for="ContactCategoryName"></span>
            </div>
             <div class="mt-3">
                <button class="btn btn-gradient" type="submit">Submit</button>
                <a class="btn btn-danger" type="button" asp-controller="ContactCategory" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}
