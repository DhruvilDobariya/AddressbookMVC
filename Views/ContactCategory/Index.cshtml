@model IEnumerable<ContactCategory>
@{
    ViewData["Title"] = "Index - Contact Category";
}

<div class="row border">
    <div class="row m-2 mt-4">
        <h2 class="col-md-6">
            <i class="fa-solid fa-users"></i>
            Contact Category
        </h2>
        <div class="col-md-6 text-end">
            <a class="btn btn-danger" asp-controller="ContactCategory" asp-action="Create">
                <i class="fa-solid fa-plus"></i>
                Add Contact Category
            </a>
        </div>
    </div>
    <div class="row m-2">
        <table class="table table-hover" id="table">
            <thead class="header2 text-light">
                <th>Id</th>
                <th>Name</th>
                <th>Creation Date</th>
                <th class="text-center">Edit</th>
                <th class="text-center">Delete</th>
            </thead>
            <tbody>
                @foreach (var contactCategory in @Model)
                {
                    <tr>
                        <td>@contactCategory.ContactCategoryId</td>
                        <td>@contactCategory.ContactCategoryName</td>
                        <td>@contactCategory.CreationDate</td>
                        <td class="text-center">
                            <a class="btn btn-gradient" asp-controller="ContactCategory" asp-action="Update" asp-route-Id="@contactCategory.ContactCategoryId">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-danger" asp-controller="ContactCategory" asp-action="Delete" asp-route-Id="@contactCategory.ContactCategoryId">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

