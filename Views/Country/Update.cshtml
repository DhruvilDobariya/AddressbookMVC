@model Country
@{
    ViewData["Title"] = "Update";
}
<div class="border p-4">
    <div>
        <h2>Edit Country</h2>
    </div>
    <div>
        <form method="post">
            <div>
                <input type="text" asp-for="CountryId" hidden/>
                <input type="text" asp-for="CreationDate" hidden/>
            </div>
            <div class="mt-2">
                <label class="form-label" asp-for=CountryName></label>
                <input type="text" class="form-control" asp-for="CountryName"/>
                <span class="text-danger" asp-validation-for="CountryName"></span>
            </div>
            <div class="mt-2">
                <label class="form-label" asp-for=CountryCode></label>
                <input type="text" class="form-control" asp-for="CountryCode"/>
                <span class="text-danger" asp-validation-for="CountryCode"></span>
            </div>
            <div class="mt-3">
                <button class="btn btn-gradient" type="submit">Submit</button>
                <a class="btn btn-danger" type="button" asp-controller="Country" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}


