@model State
@{
    ViewData["Title"] = "Update";
}

<div class="border p-4">
    <div>
        <h2>Edit State</h2>
    </div>
    <div>
        <form method="post">
            <div>
                <input type="text" asp-for="StateId" hidden>
                <input type="text" asp-for="CreationDate" hidden>
            </div>
            <div class="mt-2">
                <label class="form-label" asp-for="StateName"></label>
                <input type="text" class="form-control" asp-for="StateName" />
                <span class="text-danger" asp-validation-for="StateName"></span>
            </div>
            <div class="mt-2">
                <label class="form-label" asp-for="StateCode"></label>
                <input type="text" class="form-control" asp-for="StateCode" />
                <span class="text-danger" asp-validation-for="StateCode"></span>
            </div>
            <div class="mt-2">
                <label class="form-label" asp-for="CountryId"></label>
                <select class="form-select" asp-for="CountryId" asp-items="@ViewBag.Countries">
                </select>
            </div>
            <div class="mt-3">
                <button class="btn btn-gradient" type="submit">Submit</button>
                <a class="btn btn-danger" type="button" asp-controller="State" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial"></partial>
}
